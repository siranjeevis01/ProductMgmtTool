@model ProductMgmt.Models.CategoryAttributeDefinition

@{
    ViewData["Title"] = "Attribute Details";
}

<h2 class="mb-4 text-primary">Attribute Details</h2>

<div class="card shadow-sm rounded p-4 bg-white" style="max-width: 600px;">
    <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
        <li class="list-group-item"><strong>Category:</strong> @Model.Category?.Name</li>
        <li class="list-group-item">
            <strong>Data Type:</strong> 
            <span class="badge bg-info text-dark">@Model.DataType</span>
        </li>
        <li class="list-group-item">
            <strong>Required:</strong> 
            @if (Model.IsRequired)
            {
                <span class="badge bg-success">Yes</span>
            }
            else
            {
                <span class="badge bg-secondary">No</span>
            }
        </li>
    </ul>

    <div class="d-flex gap-2">
        <a class="btn btn-secondary btn-lg" asp-action="Index">Back</a>
        <a class="btn btn-warning btn-lg" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>
