@model ProductMgmt.Models.CategoryAttributeDefinition

@{
    ViewData["Title"] = "Attribute Details";
}

<div class="card shadow-lg rounded p-4 bg-white mx-auto animate__animated animate__fadeInDown" style="max-width: 650px;">
    <div class="card-header bg-dark text-white fw-bold fs-5 d-flex align-items-center">
        <i class="bi bi-info-circle-fill me-2 text-warning"></i> Attribute Details
    </div>

    <div class="card-body">
        <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item">
                <strong>Name:</strong> <span class="ms-2 text-dark fw-semibold">@Model.Name</span>
            </li>
            <li class="list-group-item">
                <strong>Category:</strong> <span class="ms-2 text-secondary fw-semibold">@Model.Category?.Name</span>
            </li>
            <li class="list-group-item">
                <strong>Data Type:</strong> 
                <span class="badge bg-info text-dark ms-2 px-3 py-2">@Model.DataType</span>
            </li>
            <li class="list-group-item">
                <strong>Required:</strong>
                @if (Model.IsRequired)
                {
                    <span class="badge bg-success ms-2 px-3 py-2">Yes</span>
                }
                else
                {
                    <span class="badge bg-secondary ms-2 px-3 py-2">No</span>
                }
            </li>
        </ul>

        <div class="d-flex gap-3">
            <a class="btn btn-outline-secondary btn-lg shadow-sm back-btn" asp-action="Index">
                <i class="bi bi-arrow-left-circle me-2"></i> Back
            </a>
            <a class="btn btn-warning btn-lg shadow-sm edit-btn" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="bi bi-pencil-square me-2"></i> Edit
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .edit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.15);
    }
    .back-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.12);
    }
</style>
