@model IEnumerable<ProductMgmt.Models.CategoryAttributeDefinition>

@{
    ViewData["Title"] = "Attributes";
}

<h2 class="mb-4 text-dark">Attributes</h2>

<div class="mb-3">
    <a class="btn btn-dark btn-lg" asp-action="Create">+ Create New Attribute</a>
</div>

<div class="card shadow-sm rounded p-4 bg-white">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-secondary text-dark">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Data Type</th>
                    <th>Required</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td class="fw-bold">@a.Name</td>
                    <td>@a.Category?.Name</td>
                    <td>
                        <span class="badge bg-dark text-white">@a.DataType</span>
                    </td>
                    <td>
                        @if (a.IsRequired)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm me-1 mb-1" asp-action="Details" asp-route-id="@a.Id">Details</a>
                        <a class="btn btn-warning btn-sm me-1 mb-1" asp-action="Edit" asp-route-id="@a.Id">Edit</a>
                        <form method="post" asp-action="Delete" asp-route-id="@a.Id" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm mb-1" onclick="return confirm('Are you sure you want to delete this attribute?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
