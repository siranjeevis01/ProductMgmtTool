@model ProductMgmt.Models.Product
@{
    ViewData["Title"] = "Create Product";
    var categories = ViewBag.Categories as List<ProductMgmt.Models.Category>;
}

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label for="Name">Name</label>
        <input asp-for="Name" id="Name" name="Name" autocomplete="name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="SKU">SKU</label>
        <input asp-for="SKU" id="SKU" name="SKU" autocomplete="off" class="form-control" />
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Price">Price</label>
        <input asp-for="Price" id="Price" name="Price" autocomplete="off" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" id="CategoryId" name="CategoryId" class="form-select" asp-items="@(new SelectList(categories, "Id", "Name"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div id="attribute-container"></div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$('#CategoryId').change(function () {
    var categoryId = $(this).val();
    var container = $('#attribute-container');
    container.empty();
    if (!categoryId) return;

    $.getJSON('/Product/GetAttributesForCategory', { categoryId: categoryId }, function (data) {
        $.each(data, function (i, attr) {
            var html = '<div class="form-group mb-3">';
            html += '<label for="attr_' + attr.id + '">' + attr.name + ' (' + attr.dataType + ')</label>';
            html += '<input type="text" class="form-control" id="attr_' + attr.id + '" name="attributeValues[' + attr.id + ']" autocomplete="off" />';
            if (attr.isRequired) html += '<small class="text-danger">Required</small>';
            html += '</div>';
            container.append(html);
        });
    });
});
</script>
}
