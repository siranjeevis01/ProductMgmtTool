<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ProductMgmtTool</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        /* Navbar */
        .navbar-brand {
            letter-spacing: 1px;
        }
        .nav-link {
            transition: color 0.2s;
        }
        .nav-link:hover {
            color: #ffd700;
        }

        /* Footer */
        footer {
            letter-spacing: 0.5px;
        }

        /* Dashboard cards */
        .dashboard-card {
            border-radius: 1rem;
            color: #fff;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }
        .dashboard-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 14px 28px rgba(0,0,0,0.25);
        }
        .gradient-purple { background: linear-gradient(135deg, #5c2a9d, #8b4dfa); }
        .gradient-pink { background: linear-gradient(135deg, #ff4e50, #f9d423); }

        /* Recent cards */
        .recent-card {
            border-radius: 0.75rem;
            overflow: hidden;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }
        .recent-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 14px 28px rgba(0,0,0,0.18);
        }
        .recent-card img {
            object-fit: cover;
            height: 180px;
            width: 100%;
            background: #f8f9fa;
        }

        /* Badges */
        .badge {
            font-size: 0.75rem;
            padding: 0.25em 0.5em;
            transition: transform 0.2s;
        }
        .badge:hover { transform: scale(1.05); }

        /* Buttons */
        .create-btn {
            background: linear-gradient(135deg,#343a40,#6c757d);
            color:#ffd700;
            border:none;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .create-btn:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }

    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-4" href="/">ProductMgmtTool</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link fw-medium" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link fw-medium" href="/Category">Categories</a></li>
                    <li class="nav-item"><a class="nav-link fw-medium" href="/Attribute">Attributes</a></li>
                    <li class="nav-item"><a class="nav-link fw-medium" href="/Product">Products</a></li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium" asp-controller="Cart" asp-action="Index">
                            <i class="bi bi-cart"></i> 
                            <span class="cart-count badge bg-danger" id="cartCount">0</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto shadow-sm">
        &copy; 2025 ProductMgmtTool. All rights reserved.
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
