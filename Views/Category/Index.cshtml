@model IEnumerable<ProductMgmt.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Category</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Attributes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    @if (category.AttributeDefinitions != null && category.AttributeDefinitions.Any())
                    {
                        <ul>
                            @foreach (var attr in category.AttributeDefinitions)
                            {
                                <li>@attr.Name (@attr.DataType) @if(attr.IsRequired){<span class="text-danger">*</span>}</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No attributes</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@category.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
