@model ProductMgmt.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<h2 class="mb-4 text-primary fw-bold animate__animated animate__fadeInDown">✏️ Edit Category</h2>

<div class="card shadow-lg border-0 rounded-3 p-4 bg-white animate__animated animate__fadeIn">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <!-- Category Basic Info -->
        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Name</label>
            <input asp-for="Name" class="form-control border-primary" placeholder="Enter category name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
            <label for="ImageFile" class="form-label">Category Image</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail mt-2" style="max-width:200px;" />
            }
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Description</label>
            <textarea asp-for="Description" class="form-control border-primary" rows="3" placeholder="Write a short description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Attributes Section -->
        <h4 class="mt-4 mb-3 text-secondary fw-bold">⚙️ Attributes</h4>
        <div id="attributesContainer">
            @foreach (var attr in Model?.AttributeDefinitions ?? new List<ProductMgmt.Models.CategoryAttributeDefinition>())
            {
                <div class="mb-3 card p-3 shadow-sm border-0 rounded-3 attribute-card">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="form-label fw-bold text-dark">@attr.Name 
                            <span class="badge bg-info text-dark">@attr.DataType</span>
                        </label>
                        <button type="button" class="btn btn-sm btn-outline-danger remove-attr">
                            <i class="bi bi-x-circle"></i> Remove
                        </button>
                    </div>

                    <input type="hidden" name="AttributeDefinitions.Index" value="@attr.Id" />

                    <input name="AttributeDefinitions[@attr.Id].Name" value="@attr.Name" 
                           class="form-control mb-2 border-primary" placeholder="Attribute name"/>

                    <input name="AttributeDefinitions[@attr.Id].DataType" value="@attr.DataType" 
                           class="form-control mb-2 border-primary" placeholder="Data type"/>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" 
                               name="AttributeDefinitions[@attr.Id].IsRequired" value="true" @(attr.IsRequired ? "checked" : "") />
                        <label class="form-check-label">Required</label>
                    </div>
                </div>
            }
        </div>

        <!-- Add Attribute Button -->
        <button type="button" id="addAttribute" class="btn btn-gradient btn-sm mt-2 mb-3">
            <i class="bi bi-plus-circle"></i> Add Attribute
        </button>

        <!-- Actions -->
        <div class="mt-4">
            <button type="submit" class="btn btn-gradient btn-lg me-2">
                <i class="bi bi-save"></i> Update Category
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        // Add new attribute dynamically
        $("#addAttribute").click(function () {
            let newId = Date.now(); // temporary unique ID
            let html = `
                <div class="mb-3 card p-3 shadow-sm border-0 rounded-3 attribute-card">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="form-label fw-bold text-dark">New Attribute 
                            <span class="badge bg-secondary">Text</span>
                        </label>
                        <button type="button" class="btn btn-sm btn-outline-danger remove-attr">
                            <i class="bi bi-x-circle"></i> Remove
                        </button>
                    </div>

                    <input type="hidden" name="AttributeDefinitions.Index" value="${newId}" />

                    <input name="AttributeDefinitions[${newId}].Name" class="form-control mb-2 border-primary" placeholder="Attribute name"/>
                    <input name="AttributeDefinitions[${newId}].DataType" class="form-control mb-2 border-primary" placeholder="Data type"/>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="AttributeDefinitions[${newId}].IsRequired" value="true" />
                        <label class="form-check-label">Required</label>
                    </div>
                </div>`;
            $("#attributesContainer").append(html);
        });

        // Remove attribute card
        $(document).on("click", ".remove-attr", function () {
            $(this).closest(".attribute-card").remove();
        });
    </script>
}

<!-- Styling -->
<style>
.btn-gradient {
    background: linear-gradient(135deg, #007bff, #6610f2);
    color: #fff;
    border: none;
    transition: 0.3s ease;
}
.btn-gradient:hover {
    background: linear-gradient(135deg, #6610f2, #007bff);
    transform: scale(1.05);
}
.attribute-card {
    transition: all 0.3s ease;
}
.attribute-card:hover {
    background: #f9f9ff;
    transform: scale(1.01);
}
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
