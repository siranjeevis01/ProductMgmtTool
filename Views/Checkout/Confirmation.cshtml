@model ProductMgmt.Models.Order
@using System.Globalization

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="text-center py-5">
    <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="text-success mb-4">
                <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
            </div>
            
            <h2 class="text-dark fw-bold mb-3">Order Confirmed!</h2>
            <p class="text-muted mb-4">Thank you for your purchase. Your order has been received and is being processed.</p>
            
            <div class="card bg-light mb-4">
                <div class="card-body">
                    <h5 class="card-title">Order Details</h5>
                    <p><strong>Order Number:</strong> @Model.OrderNumber</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C", new CultureInfo("en-IN"))</p>
                </div>
            </div>
            
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-bag me-1"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>