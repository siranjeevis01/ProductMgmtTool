@model ProductMgmt.Models.Order
@using System.Globalization

@{
    ViewData["Title"] = "Checkout";
    var cart = ViewBag.Cart as ProductMgmt.Models.Cart;
}

<h2 class="mb-4 text-dark fw-bold">
    <i class="bi bi-credit-card me-2"></i> Checkout
</h2>

@if (cart == null || cart.Items == null || !cart.Items.Any())
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-cart-x me-2"></i> Your cart is empty. 
        <a asp-controller="Product" asp-action="Index" class="alert-link">Continue shopping</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Review</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in cart.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(item.Product?.ImageUrl ?? "https://via.placeholder.com/60x60.png?text=No+Image")" 
                                                     class="img-thumbnail me-2" style="width: 60px; height: 60px; object-fit: cover;">
                                                <div>
                                                    <h6 class="mb-0">@item.Product?.Name</h6>
                                                    <small class="text-muted">SKU: @item.Product?.SKU</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">@(item.Product?.Price.ToString("C", new CultureInfo("en-IN")) ?? "N/A")</td>
                                        <td class="align-middle">@item.Quantity</td>
                                        <td class="align-middle fw-bold">
                                            @((item.Quantity * (item.Product?.Price ?? 0)).ToString("C", new CultureInfo("en-IN")))
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @{
                        var subtotal = cart.Items.Sum(i => i.Quantity * (i.Product?.Price ?? 0));
                        var tax = subtotal * 0.1m;
                        var total = subtotal + tax;
                    }
                    
                    <div class="d-flex justify-content-between mb-1">
                        <span>Subtotal:</span>
                        <span>@subtotal.ToString("C", new CultureInfo("en-IN"))</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Tax (10%):</span>
                        <span>@tax.ToString("C", new CultureInfo("en-IN"))</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1 fw-bold">
                        <span>Total:</span>
                        <span>@total.ToString("C", new CultureInfo("en-IN"))</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label">Full Name</label>
                            <input asp-for="CustomerName" class="form-control" required>
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CustomerEmail" class="form-label">Email</label>
                            <input asp-for="CustomerEmail" type="email" class="form-control" required>
                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CustomerPhone" class="form-label">Phone</label>
                            <input asp-for="CustomerPhone" class="form-control" required>
                            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="sameAsShipping">
                            <label class="form-check-label" for="sameAsShipping">
                                Billing address same as shipping
                            </label>
                        </div>
                        
                        <div class="mb-3" id="billingAddressSection">
                            <label asp-for="BillingAddress" class="form-label">Billing Address</label>
                            <textarea asp-for="BillingAddress" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="BillingAddress" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100 py-2">
                            <i class="bi bi-check-circle me-1"></i> Place Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#sameAsShipping').change(function() {
                if ($(this).is(':checked')) {
                    $('#billingAddressSection').hide();
                    $('#BillingAddress').val($('#ShippingAddress').val());
                } else {
                    $('#billingAddressSection').show();
                }
            }).trigger('change');
        });
    </script>
}